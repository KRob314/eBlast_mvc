@model eBlast_mvc.ViewModels.EmailViewModel

<h2>Send Email</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Contacts)
            @Html.DropDownList("ContactId", null,  "-- Select --", new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.ContactGroups)
            @Html.DropDownList("ContactGroupId",  Model.ContactGroups, "-- Select --", new {@class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.EmailTemplates)
            @Html.DropDownListFor(m => m.EmailTemplates, new SelectList(Model.EmailTemplates, "EmailTemplateId", "Name"), "-- Select --", new { @class = "form-control"})
        </div>
    </div>

    <div class="row margin-top-15">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Subject)
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
        </div>
    </div>

    <div class="row margin-top-15">
        <div class="col-md-12">
            @Html.Partial("_htmlEditor", new {@name = "Body" })
        </div>
    </div>

    <input type="submit" id="btnSave" value="Send" class="btn btn-primary margin-top-30" />
}